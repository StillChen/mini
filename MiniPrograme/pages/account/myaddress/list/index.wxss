/* pages/account/myaddress/list/index.wxss */
.address-1{
  background: #fff;
  padding: 20rpx 0 24rpx;
  margin-bottom: 20rpx;
}
.address-top{
  font-size: 28rpx;
  color: #000;
  padding: 0 24rpx;
}
.address-content{
  padding: 32rpx 24rpx 26rpx;
  color: #000;
  max-width: 77%;
}
.miniradio{  
  transform:scale(0.8);
}
.address-bottom{
  color: #aaa;
  padding: 20rpx 24rpx 0;
  border-top: 1px solid #e5e5e5;
}
.address-bottom button{
  background: transparent;
  border: none;
  border-radius: 0rpx;
  padding: 0;
  line-height: 1;
  color: #aaa;
  margin:10rpx 20rpx 0 0;
  font-size: 28rpx;
}
.address-bottom button .iconfont{
  vertical-align: middle;
}
.address-bottom button::after{
  border: none;
}
