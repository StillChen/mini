/* pages/resource/index/index.wxss */
.snapbuy{
  display: block;
  background-color: #ffffff;
  padding-top: 20rpx;
}
.snapbuy .snapbuy-title{
  text-align: center;
  padding: 16px 0;
}
.goods-card{
  margin:0rpx 20rpx 20rpx 20rpx !important;
  display: block;
  border: 1rpx #ccc solid;
  border-radius: 4rpx;
  padding:20rpx !important;

}
.goods-card .goods-title{
  width: 450rpx;
}
.goods-card .goods-subtitle{
  width: 450rpx;
  margin-top: 6rpx;
}
.weui-progress{
  margin-top: 1px !important;
  position:relative !important;
}
.weui-progress .weui-progress__bar{
  border-radius: 8px !important;
  overflow: hidden !important;
  border: 1px #f48f18 solid;
  position: absolute;
  width: 100%;
  top: 0rpx;
}
.weui-progress .weui-progress__opr{
  position: absolute ;
  text-align: center ;
  width: 100%;
  top: 0 ;
  font-size: 10px ;
  color: #f48f18 ;
  line-height: 16px;
  margin-left:0;
}
.zan-btn--small{
  height:20px !important;
  line-height:20px !important;
  font-size:12px !important;
}
.active{
  position: absolute;
  right: 0px;
  width: 140rpx;
  top: -5rpx;
}